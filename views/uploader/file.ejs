<%- include('../uploaderPartials/header.ejs') %>
        <!--Container Main start-->
        <div class="height-100 mt-10">

            <h4 class="pt-4">File</h4>
            <div class="user-details pt-4">
                <p>Bank: <%= file.bank %></p>
                <p>Location: <%= file.location %></p>
                <p>Date: <%= file?.createdAt%></p>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped table-bordered table-hover" id="file">
                    <thead>
                        <tr>
                            <% headers.forEach( header => {%>
                                <th><%= header %></th>
                            <% })%>
                            <th>Customer ID</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < file.csv.length; i++){%>
                            <tr>
                                <% for(let k = 0; k < headers.length; k++){%>
                                <td><%= file.csv[i][headers[k]] %></td>
                                <% }%>
                                <td></td>
                                <td><button onclick="renew('<%=i%>','<%= file_id %>','<%=file.csv[i][`data_ref`]%>')" class="btn btn-primary btn-sm">Renew</button></td>
                            </tr>
                        <% }%>
                    </tbody>
                  </table>
            </div>

        </div>
        <!-- The Modal -->
            <button type="button" style="display: none;" id="toggleModal" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#renewModal">
                Open modal
              </button>
            </div>
            <div class="modal" id="renewModal">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
            
                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
            
                  <!-- Modal body -->
                  <div class="modal-body">
                    <form action="./submit-renew-form" method="post" autocomplete="off">
                        <div class="form-group mb-4">
                            <label for="email" class="sr-only">Payment Option</label>
                            <select name="bank" id="paymentOpion" class="form-control">
                                <option value="covalence">Covalence</option>
                                <option value="online">24 Online</option>
                            </select>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="sr-only">Customer ID</label>
                            <input type="hidden" value="" id="renew_id" name="renew_id">
                            <input type="hidden" value="" id="file_id" name="file_id">
                            <input type="hidden" value="" id="data_ref" name="data_ref">
                            <input
                                type="text"
                                name="customer_id"
                                id="customer_id"
                                class="form-control"
                                placeholder="Customer ID" />
                        </div>
                        <button name="login" id="login" class="btn btn-block login-btn btn-dark mb-4" type="submit">Submit</button>
                    </form>
                  </div>
            
                  <!-- Modal footer -->
                  <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                  </div>
            
                </div>
              </div>
            </div>
        <!--Container Main end-->
        <%- include('../uploaderPartials/footer.ejs') %>
        <script type='text/javascript'>
    
        function renew(index, file_id, data_ref){
            $('#renew_id').val(index)
            $('#file_id').val(file_id)
            $('#data_ref').val(data_ref)
            $('#toggleModal').click();
        }
    </script>
